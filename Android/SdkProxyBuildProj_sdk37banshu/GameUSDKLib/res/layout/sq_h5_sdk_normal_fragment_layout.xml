<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/sq_h5_login_content_width"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/sq_h5_sdk_nav_top_layout"/>

    <!-- 切换登录方式导航 -->
    <include layout="@layout/sq_h5_sdk_login_swith_nav_layout" />

    <!-- 帐号密码登录 -->
    <LinearLayout
        android:id="@+id/ll_normal_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 帐号输入框 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            >

            <ImageView
                android:id="@+id/iv_icon_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/sq_h5_sdk_icon_account_input"
                />

            <EditText
                android:id="@+id/et_login_account"
                style="@style/sq_h5_sdk_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/sq_h5_sdk_pleae_enter_account"
                android:imeOptions="actionNext|flagNoExtractUi|flagNoFullscreen"
                android:inputType="text"
                android:paddingLeft="30dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_clean"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="4dp"
                    android:src="@drawable/sq_h5_sdk_icon_clean"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_account_list"
                    style="@style/sq_h5_sdk_account_list_view_style"
                    android:padding="10dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- 密码输入框 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_icon_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/sq_h5_sdk_icon_pwd_input"
                />

            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/sq_h5_sdk_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
                android:hint="@string/sq_h5_sdk_pleae_enter_pwd"
                android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_clean2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="4dp"
                    android:src="@drawable/sq_h5_sdk_icon_clean"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_pwd_eye"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/sq_h5_sdk_icon_eye_on"
                    />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <!-- 手机验证码登录区 -->
    <include layout="@layout/sq_h5_sdk_normal_phone_fragment_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="30dp"
        >

        <!-- 游客登录区 -->
        <TextView
            android:id="@+id/tv_go_guest_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_account"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="游客登录"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />

        <!-- 忘记密码区 -->
        <TextView
            android:id="@+id/tv_go_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_pwd"
            android:drawablePadding="3dp"
            android:text="忘记密码"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />


    </RelativeLayout>


    <!-- 按钮区，跳转到注册 & 登录 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/tv_go_reg_account"
            android:layout_width="130dp"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            android:background="@drawable/sq_h5_sdk_selector_orange_bg"
            android:text="@string/sq_h5_sdk_guest_login"
            android:textColor="@color/sq_h5_sdk_withe"
            android:textSize="@dimen/sq_h5_sdk_text_size_middle"/>

        <Button
            android:id="@+id/btn_user_action"
            android:layout_width="130dp"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
            android:background="@drawable/sq_h5_sdk_selector_blue_bg"
            android:text="@string/sq_h5_sdk_login"
            android:textColor="@color/sq_h5_sdk_withe"
            android:textSize="@dimen/sq_h5_sdk_text_size_middle"
            />


    </LinearLayout>


    <!-- 功能切换栏 todo 已废弃 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_go_find_pwd2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_pwd"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:background="#E3E2E2"
            />

        <TextView
            android:id="@+id/tv_go_reg_account2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_account"
            android:gravity="center"
            android:text="注册帐号"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />

    </LinearLayout>

</LinearLayout>