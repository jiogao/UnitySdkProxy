<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <!-- small float view -->
    <RelativeLayout
        android:id="@+id/sdk_float_layout_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/sdk_float_img_small_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sq_h5_sdk_floatview_logo"/>

        <ImageView
            android:id="@+id/sdk_float_img_redpoint_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/sq_h5_sdk_floatview_icon_redpoint"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/sdk_float_img_redpoint_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/sq_h5_sdk_floatview_icon_redpoint"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>
