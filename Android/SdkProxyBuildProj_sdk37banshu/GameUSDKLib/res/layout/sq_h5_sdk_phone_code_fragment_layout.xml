<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/sq_h5_login_content_width"
              android:layout_height="@dimen/sq_h5_login_content_height"
              android:orientation="vertical">

    <include layout="@layout/sq_h5_sdk_nav_top_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_phone_code_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="请输入短信验证码"
            android:textColor="@color/sq_h5_sdk_black"
            android:textSize="@dimen/sq_h5_sdk_text_size_small"
            />
        <!--android:background="@drawable/sq_h5_sdk_selector_blue_bg"-->

        <com.games37.h5gamessdk.view.CountDownView
            android:id="@+id/count_down_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:clickable="true"
            android:gravity="center"/>

    </LinearLayout>

    <!-- 帐号输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        >

        <com.gamesdk.baselibs.view.verifycationcodeview.VerificationCodeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_register_verify_code_vcview"
            />

    </LinearLayout>
    <!-- 帐号输入框 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_icon_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/sq_h5_sdk_icon_pwd_input"
            />

        <EditText
            android:id="@+id/et_register_verify_code"
            style="@style/sq_h5_sdk_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入短信验证码"
            android:imeOptions="actionNext|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:paddingLeft="30dp"
            >

            <requestFocus/>
        </EditText>

        <ImageView
            android:id="@+id/iv_clean"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:src="@drawable/sq_h5_sdk_icon_clean"
            android:visibility="visible"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_user_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/sq_h5_sdk_selector_orange_bg"
        android:gravity="center"
        android:text="@string/sq_h5_sdk_ok"
        android:textColor="@color/sq_h5_sdk_withe"
        android:textSize="@dimen/sq_h5_sdk_text_size_middle"/>

    <!-- 功能切换栏 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_go_phone_code_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_pwd"
            android:gravity="center"
            android:text="密码登录"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />

    </LinearLayout>
</LinearLayout>