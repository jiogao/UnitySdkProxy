<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/sq_h5_login_content_width"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/sq_h5_sdk_nav_top_layout" android:visibility="visible"/>

    <!-- TODO 控制注册title的top和bottom来控制高度 -->
    <TextView
        android:id="@+id/tv_reg_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="帐号注册"
        android:textColor="@color/sq_h5_sdk_text_gray_deep"
        android:textSize="15sp"/>

    <!-- 帐号密码注册 -->
    <LinearLayout
        android:id="@+id/ll_normal_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 帐号输入框 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            >

            <ImageView
                android:id="@+id/iv_icon_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/sq_h5_sdk_icon_account_input"
                />

            <EditText
                android:id="@+id/et_login_account"
                style="@style/sq_h5_sdk_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/sq_h5_sdk_register_account_tips"
                android:imeOptions="actionNext|flagNoExtractUi|flagNoFullscreen"
                android:inputType="text"
                android:paddingLeft="30dp"
                >

                <requestFocus/>
            </EditText>

            <ImageView
                android:id="@+id/iv_clean"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="4dp"
                android:src="@drawable/sq_h5_sdk_icon_clean"
                android:visibility="visible"/>

        </RelativeLayout>

        <!-- 密码输入框 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_icon_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/sq_h5_sdk_icon_pwd_input"
                />

            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/sq_h5_sdk_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
                android:hint="@string/sq_h5_sdk_register_pwd_tips"
                android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_clean2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="4dp"
                    android:src="@drawable/sq_h5_sdk_icon_clean"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_pwd_eye"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/sq_h5_sdk_icon_eye_on"
                    android:visibility="visible"/>

            </LinearLayout>


        </RelativeLayout>

        <!-- 注册协议 -->
        <LinearLayout
            android:id="@+id/layout_reg_register_service"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckb_user_agreement"
                style="@style/sq_h5_sdk_checkbox_style"
                android:layout_width="@dimen/sq_h5_sdk_checkbox_width_and_height"
                android:layout_height="@dimen/sq_h5_sdk_checkbox_width_and_height"
                android:checked="true"/>

            <TextView
                android:id="@+id/tv_agree_register_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/sq_h5_sdk_agree_register_service"
                android:textSize="@dimen/sq_h5_sdk_text_size_xxsmall"/>

            <TextView
                android:id="@+id/tv_register_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/sq_h5_sdk_register_service"
                android:textColor="@color/sq_h5_sdk_text_web_link"
                android:textSize="@dimen/sq_h5_sdk_text_size_xxsmall"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_user_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sq_h5_sdk_edittext_view_height"
        android:layout_marginLeft="@dimen/sq_h5_sdk_login_edittext_margin"
        android:layout_marginRight="@dimen/sq_h5_sdk_login_edittext_margin"
        android:background="@drawable/sq_h5_sdk_selector_orange_bg"
        android:gravity="center"
        android:text="@string/sq_h5_sdk_register"
        android:textColor="@color/sq_h5_sdk_withe"
        android:textSize="@dimen/sq_h5_sdk_text_size_middle"/>

    <!-- 功能切换栏 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_go_account_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_account"
            android:gravity="center"
            android:text="已有帐号"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:background="#E3E2E2"
            />

        <TextView
            android:id="@+id/tv_go_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/sq_h5_sdk_icon_phone"
            android:gravity="center"
            android:text="手机登录"
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            />

    </LinearLayout>

</LinearLayout>