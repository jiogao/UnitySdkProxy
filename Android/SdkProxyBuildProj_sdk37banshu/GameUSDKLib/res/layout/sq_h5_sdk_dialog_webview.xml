<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_dialog_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/sq_h5_sdk_light_gray"
              android:orientation="vertical">

    <!-- 通用导航栏 -->

    <RelativeLayout
        android:id="@+id/layout_dialog_webview_nav"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@color/sq_h5_sdk_withe">

        <TextView
            android:id="@+id/text_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/sq_h5_sdk_text_gray_deep"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/img_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/sq_h5_sdk_close_icon"/>

        <ImageView
            android:id="@+id/img_dialog_min"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/sq_h5_sdk_icon_min"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/sq_h5_sdk_text_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        >

        <wendu.dsbridge.DWebView
            android:id="@+id/webview_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        </wendu.dsbridge.DWebView>

    </RelativeLayout>

</LinearLayout>
