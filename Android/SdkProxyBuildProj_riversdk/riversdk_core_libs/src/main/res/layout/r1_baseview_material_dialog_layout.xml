<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="@dimen/r1_material_dialog_min_width"
    android:orientation="vertical"
    android:padding="@dimen/r1_material_dialog_padding">

    <LinearLayout
        android:id="@+id/ll_material_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r1_baseview_material_card"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/r1_material_dialog_title_margin"
                android:layout_marginRight="@dimen/r1_material_dialog_title_margin"
                android:layout_marginTop="@dimen/r1_material_dialog_title_margin"
                android:textColor="@color/r1_material_dialog_black"
                android:textSize="@dimen/r1_material_dialog_title_text_size"
                tools:text="Material title" />

            <ScrollView
                android:id="@+id/sl_message_content_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/r1_material_dialog_root_content_marginTop"
                android:layout_weight="1"
                tools:layout_height="@dimen/r1_material_dialog_root_content_tool_height">

                <LinearLayout
                    android:id="@+id/ll_message_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/r1_material_dialog_root_content_marginLeft"
                    android:paddingRight="@dimen/r1_material_dialog_root_content_marginLeft">

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/r1_material_dialog_content_text_color"
                        android:textSize="@dimen/r1_material_dialog_content_textsize"
                        tools:text="message" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/r1_material_dialog_btn_layout_marginBottom"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/r1_material_dialog_btn_layout_paddingBottom"
            android:paddingTop="@dimen/r1_material_dialog_btn_layout_paddingTop">

            <Button
                android:id="@+id/btn_n"
                style="@style/r1_material_dialog_action_button"
                android:stateListAnimator="@null"
                android:textColor="@color/r1_material_dialog_black"
                tools:text="CANCEL" />

            <Button
                android:id="@+id/btn_p"
                style="@style/r1_material_dialog_action_button"
                android:layout_marginLeft="@dimen/r1_material_dialog_confirm_btn_marginLeft"
                android:layout_marginRight="@dimen/r1_material_dialog_confirm_btn_marginRight"
                android:stateListAnimator="@null"
                android:textColor="@color/r1_material_dialog_confirm_btn_text_color"
                tools:text="OK" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
