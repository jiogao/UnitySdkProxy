<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i1_sdk_fb_social_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tilte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/i1_sdk_fb_social_rl_tile_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/i1_sdk_fb_social_tv_title_text_margin"
            android:layout_marginTop="@dimen/i1_sdk_fb_social_tv_title_text_margin"
            android:text="@string/app_name"
            android:textColor="@color/i1_sdk_fb_social_white"
            android:textSize="@dimen/i1_sdk_fb_social_tv_title_textsize" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/i1_sdk_fb_social_iv_title_close_img_margin"
            android:src="@drawable/i1_sdk_fb_social_close_btn" />

        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/i1_sdk_fb_social_iv_title_question_img_margin"
            android:layout_toLeftOf="@id/iv_close"
            android:src="@drawable/i1_sdk_fb_social_question_btn" />"

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/i1_sdk_fb_social_split_size"
        android:background="@color/i1_sdk_fb_social_split_color" />

    <LinearLayout
        android:id="@+id/ll_handle_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/i1_sdk_fb_social_profile_bg">

                <ImageView
                    android:id="@+id/iv_user_avtar"
                    android:layout_width="@dimen/i1_sdk_fb_social_iv_user_avtar_size"
                    android:layout_height="@dimen/i1_sdk_fb_social_iv_user_avtar_size"
                    android:layout_marginLeft="@dimen/i1_sdk_fb_social_iv_user_avtar_margin_left"
                    android:layout_marginRight="@dimen/i1_sdk_fb_social_iv_user_avtar_margin_left"
                    android:layout_marginTop="@dimen/i1_sdk_fb_social_iv_user_avtar_margin_top"
                    android:background="@color/i1_sdk_fb_social_white"
                    android:padding="@dimen/i1_sdk_fb_social_iv_user_avtar_padding"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_user_avtar"
                    android:layout_toRightOf="@id/iv_user_avtar"
                    android:text="Colton"
                    android:textColor="@color/i1_sdk_fb_social_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_fb_like"
                    android:layout_width="@dimen/i1_sdk_fb_social_iv_fblike_width"
                    android:layout_height="@dimen/i1_sdk_fb_social_iv_fblike_height"
                    android:layout_alignBottom="@id/iv_user_avtar"
                    android:layout_toRightOf="@id/iv_user_avtar"
                    android:src="@drawable/i1_sdk_fb_social_like_btn" />

                <TextView
                    android:id="@+id/tv_invited_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_user_avtar"
                    android:layout_below="@id/iv_user_avtar"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/i1_sdk_fb_social_black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <com.games37.riversdk.core.facebook.social.view.SocialItemListView
                android:id="@+id/lv_social_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/i1_sdk_fb_social_split_color"
                android:dividerHeight="1dp"
                android:listSelector="@android:color/transparent" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/i1_sdk_fb_social_split_size"
            android:layout_height="match_parent"
            android:background="@color/i1_sdk_fb_social_split_color" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.72">

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/i1_sdk_fb_social_ll_share_padding">

                <ImageView
                    android:id="@+id/iv_facebook_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/i1_sdk_fb_social_fb_share_btn" />

                <ImageView
                    android:id="@+id/iv_line_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/i1_sdk_fb_social_line_share_btn" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_content_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_share"
                android:background="@color/i1_sdk_fb_social_fl_fb_content_area_bg" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
