<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/g1_sdk_transparent">

    <LinearLayout
        android:layout_width="@dimen/g1_dp_330"
        android:layout_height="@dimen/g1_dp_422"
        android:layout_gravity="center"
        android:background="@drawable/g1_sdk_bg_with_corner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sdk_icon"
            android:layout_width="@dimen/g1_dp_90"
            android:layout_height="@dimen/g1_dp_22"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/g1_dp_11"
            android:layout_marginTop="@dimen/g1_dp_11"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_icon" />

        <ProgressBar
            android:id="@+id/pb_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/r1_webview_pb_height"
            android:background="@color/r1_grayish"
            android:progressDrawable="@drawable/r1_plat_core_progress_bar_states"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fl_content_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/g1_sdk_white"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/g1_dp_45"
            android:paddingLeft="@dimen/g1_dp_15"
            android:paddingRight="@dimen/g1_dp_15"
            android:layout_marginTop="@dimen/g1_dp_10"
            android:layout_marginBottom="@dimen/g1_dp_15">

            <Button
                android:id="@+id/btn_decline"
                android:layout_width="@dimen/g1_dp_126"
                android:layout_height="@dimen/g1_dp_30"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/g1_sdk_negative_btn_bg"
                android:text="@string/g1_sdk_dialog_decline_btn_text"
                android:textColor="@color/g1_sdk_register_text_color"
                android:textSize="@dimen/g1_sp_15" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="@dimen/g1_dp_126"
                android:layout_height="@dimen/g1_dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/g1_sdk_positive_btn_bg"
                android:gravity="center"
                android:text="@string/g1_sdk_dialog_accept_btn_text"
                android:textColor="@color/g1_sdk_white"
                android:textSize="@dimen/g1_sp_15" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>