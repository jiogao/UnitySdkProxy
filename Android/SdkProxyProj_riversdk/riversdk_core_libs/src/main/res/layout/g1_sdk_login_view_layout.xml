<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/g1_dp_12"
    android:layout_marginLeft="@dimen/g1_dp_34"
    android:layout_marginRight="@dimen/g1_dp_34"
    android:background="@color/g1_sdk_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/g1_dp_55"
        android:layout_height="@dimen/g1_dp_55"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/g1_dp_12"
        android:scaleType="fitCenter"
        android:src="@drawable/g1_sdk_login_avatar" />

    <FrameLayout
        android:id="@+id/fl_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/g1_dp_32"
        android:layout_marginBottom="@dimen/g1_dp_8">

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/g1_sdk_login_et_bg"
            android:gravity="center_vertical|left"
            android:hint="@string/g1_sdk_enter_account_text"
            android:paddingLeft="@dimen/g1_dp_27"
            android:singleLine="true"
            android:textColor="@color/g1_sdk_black"
            android:textColorHint="@color/g1_sdk_login_hint_color"
            android:textSize="@dimen/g1_sp_11" />

        <ImageView
            android:id="@+id/iv_account_icon"
            android:layout_width="@dimen/g1_dp_14"
            android:layout_height="@dimen/g1_dp_17"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/g1_dp_7"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_login_account_icon" />

        <ImageView
            android:id="@+id/iv_more_account"
            android:layout_width="@dimen/g1_dp_11"
            android:layout_height="@dimen/g1_dp_13"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/g1_dp_5"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_iv_more_account" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/g1_dp_32"
        android:layout_marginBottom="@dimen/g1_dp_8">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/g1_sdk_login_et_bg"
            android:gravity="center_vertical|left"
            android:hint="@string/g1_sdk_enter_pwd_text"
            android:paddingLeft="@dimen/g1_dp_27"
            android:singleLine="true"
            android:textColor="@color/g1_sdk_black"
            android:textColorHint="@color/g1_sdk_login_hint_color"
            android:textSize="@dimen/g1_sp_11" />

        <ImageView
            android:id="@+id/iv_pwd_icon"
            android:layout_width="@dimen/g1_dp_14"
            android:layout_height="@dimen/g1_dp_17"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/g1_dp_7"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_password_icon" />

        <ImageView
            android:id="@+id/iv_forget_pwd"
            android:layout_width="@dimen/g1_dp_13"
            android:layout_height="@dimen/g1_dp_13"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/g1_dp_5"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_login_iv_forget_pwd" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/g1_dp_30"
        android:layout_marginBottom="@dimen/g1_dp_8"
        android:background="@drawable/g1_sdk_positive_btn_bg"
        android:gravity="center"
        android:text="@string/g1_sdk_login_text"
        android:textColor="@color/g1_sdk_white"
        android:textSize="@dimen/g1_dp_15" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/g1_sw_28dp"
        android:layout_marginBottom="@dimen/g1_dp_6"
        android:background="@drawable/g1_sdk_negative_btn_bg"
        android:gravity="center"
        android:text="@string/g1_sdk_register_text"
        android:textColor="@color/g1_sdk_register_text_color"
        android:textSize="@dimen/g1_dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_authrized_app_list"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/g1_dp_20"
        android:gravity="center">

    </LinearLayout>
</LinearLayout>


