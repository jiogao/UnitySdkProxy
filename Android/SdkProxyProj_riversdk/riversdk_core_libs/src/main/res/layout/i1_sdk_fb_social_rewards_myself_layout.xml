<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/i1_sdk_fb_social_myreward_layout_margin"
    android:layout_marginRight="@dimen/i1_sdk_fb_social_myreward_layout_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View style="@style/i1_sdk_fb_social_vertical_layout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/i1_sdk_fb_social_myreward_header_bg"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/i1_sdk_fb_social_myreward_item_padding"
            android:singleLine="true"
            android:text="@string/i1_sdk_fb_social_time"
            android:textColor="@color/i1_sdk_fb_social_black"
            android:textSize="@dimen/i1_sdk_fb_social_myreward_header_text_size" />

        <View style="@style/i1_sdk_fb_social_vertical_layout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/i1_sdk_fb_social_myreward_header_bg"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/i1_sdk_fb_social_myreward_item_padding"
            android:singleLine="true"
            android:text="@string/i1_sdk_fb_social_reward_name"
            android:textColor="@color/i1_sdk_fb_social_black"
            android:textSize="@dimen/i1_sdk_fb_social_myreward_header_text_size" />

        <View style="@style/i1_sdk_fb_social_vertical_layout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/i1_sdk_fb_social_myreward_header_bg"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/i1_sdk_fb_social_myreward_item_padding"
            android:singleLine="true"
            android:text="@string/i1_sdk_fb_social_reward_gottype"
            android:textColor="@color/i1_sdk_fb_social_black"
            android:textSize="@dimen/i1_sdk_fb_social_myreward_header_text_size" />

        <View style="@style/i1_sdk_fb_social_vertical_layout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/i1_sdk_fb_social_myreward_header_bg"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/i1_sdk_fb_social_myreward_item_padding"
            android:singleLine="true"
            android:text="@string/i1_sdk_fb_social_status"
            android:textColor="@color/i1_sdk_fb_social_black"
            android:textSize="@dimen/i1_sdk_fb_social_myreward_header_text_size" />

        <View style="@style/i1_sdk_fb_social_vertical_layout" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_my_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/i1_sdk_fb_social_myreward_listview_divider_color"
        android:dividerHeight="1dp" />

</LinearLayout>