<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="@dimen/g1_dp_619"
        android:layout_height="@dimen/g1_dp_325"
        android:layout_gravity="center"
        android:background="@drawable/g1_sdk_bg_with_corner">

        <ImageView
            android:layout_width="@dimen/g1_dp_451"
            android:layout_height="@dimen/g1_dp_79"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/g1_dp_5"
            android:id="@+id/iv_top_decoration"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/g1_dp_59"
            android:src="@drawable/g1_sdk_login_bg"/>

        <ImageView
            android:id="@+id/iv_sdk_icon"
            android:layout_width="@dimen/g1_dp_108"
            android:layout_height="@dimen/g1_dp_26"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/g1_dp_11"
            android:scaleType="fitCenter"
            android:src="@drawable/g1_sdk_icon" />


        <LinearLayout
            android:id="@+id/ll_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/r1_transparent"
            android:layout_marginTop="@dimen/g1_dp_26"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sdk_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:scaleType="fitCenter"
                android:src="@drawable/g1_sdk_default_logo" />

            <FrameLayout
                android:id="@+id/fl_content_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:paddingRight="@dimen/g1_dp_17"
                android:gravity="center" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
